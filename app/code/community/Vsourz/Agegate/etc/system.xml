<?xml version="1.0"?>
<config>
	<tabs>
		<agegate translate="label">
			<label>Age Gate Pop-Up</label>
			<sort_order>170</sort_order>
		</agegate>
	</tabs>
	<sections>
		<agegate translate="label">
			<label>Age Gate Pop-Up</label>
			<tab>agegate</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1000</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<settings>
					<label>General Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enable_extension translate="label comment">
                            <label>Enable Extension</label>
							<frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_extension>
						<loadjs translate="label">
							<label>Load JQuery Library</label>
							<comment><![CDATA[Select YES if JQuery library in not included in your Magento Project]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>11</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</loadjs>
						<pages>
							<label>Pages</label>
							<comment><![CDATA[Select the Pop-Up block from the ID]]></comment>
							<frontend_type>multiselect</frontend_type>
							<source_model>agegate/source_page</source_model>
							<sort_order>12</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pages>
						<promotionblock>
							<label>Pop-Up Block</label>
							<comment><![CDATA[Select the Pop-Up block from the ID]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>agegate/source_staticblock</source_model>
							<sort_order>13</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</promotionblock>
						<notverifyblock>
							<label>Disagree Block</label>
							<comment><![CDATA[Select the Disagree block from the ID]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>agegate/source_staticblock</source_model>
							<sort_order>14</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</notverifyblock>
						<agree translate="label">
                            <label>Agree button text</label>
							<comment><![CDATA[Enter agree button text.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</agree>
						<disagree translate="label">
                            <label>Disagree button text</label>
							<comment><![CDATA[Enter disagree button text.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>16</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</disagree>
						<cookie translate="label">
                            <label>Cookie Interval</label>
							<comment><![CDATA[Total time<strong> (In Hours)</strong> cookie is stored]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>17</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</cookie>
						<width translate="label">
                            <label>Pop-Up Width</label>
							<comment><![CDATA[Width of POP-UP window in px. Enter <strong>auto</strong> for automatic height]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>18</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</width>
						<height translate="label">
                            <label>Pop-Up Height</label>
							<comment><![CDATA[height of POP-UP window in px. Enter <strong>auto</strong> for automatic height]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>19</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</height>
					</fields>
				</settings>
			</groups>
		</agegate>
	</sections>
</config>