var hash = {
  '.jpg' : 1,
  '.jpeg' : 1,
  '.gif' : 1,
  '.png' : 1,
};

function check_extension(filename,submitId) {
    var re = /\..+$/;
    var ext = filename.match(re);
    var submitEl = document.getElementById(submitId);
    if (hash[ext]) {
    submitEl.disabled = false;
    return true;
    } else {
    alert("Please upload 'jpg', 'jpeg', 'gif', 'png' file only");
    submitEl.value = '';

    return false;
    }
}
